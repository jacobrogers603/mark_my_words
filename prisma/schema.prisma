generator cleint {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String    @unique
  username       String    @unique
  hashedPassword String
  sessions       Session[]
  noteIDs        String[]  @db.ObjectId
  currentPath    String[]  @db.ObjectId
  templateIDs    String[]  @db.ObjectId
}

model Note {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  content         String?
  htmlContent     String?
  isDirectory     Boolean
  userId          String   @db.ObjectId
  childrenIds     String[] @db.ObjectId
  parentId        String?  @db.ObjectId
  readAccessList  String[]
  writeAccessList String[]
  imageIds        String[] @db.ObjectId
}

model Template {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  content String?
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Image {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String @db.ObjectId
  fileName String
}

model ResetCode {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  resetCode    String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
}
